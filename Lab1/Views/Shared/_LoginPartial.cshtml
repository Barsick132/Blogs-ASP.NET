@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li>
                @Html.ActionLink("Избранное", "Favorites", "Blogs", new { area="" }, new { @class = "nav-link " + ViewBag.Page3 })
            </li>
            <li>
                @Html.ActionLink("Личный кабинет", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link " + ViewBag.Page4 })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link " + ViewBag.Page3 })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link " + ViewBag.Page4 })</li>
    </ul>
}
