@using Lab1.Models
@model Article
@{
    ViewBag.Page2 = "nav-item active";
    ViewBag.Hidden = "hidden = \"hidden\"";
}

@functions {

    public string isHidden(bool Condition)
    {
        if (Condition)
        {
            return "hidden = \"hidden\"";
        }
        else
        {
            return "";
        }
    }

    public string isContent(string str1, string str2)
    {
        if(str1!=null & str1 != "")
        {
            return str1;
        }
        else
        {
            return str2;
        }
    }
}

<h2 class="display-4 mb-3">Редактирование статьи</h2>
<div class="alert alert-danger col-12" @isHidden(ViewBag.Message == null) role="alert">
    @ViewBag.Message
</div>
<div class="alert alert-warning col-12" role="alert">
    @using (Html.BeginForm("Edit", "Blogs", FormMethod.Post))
    {
        @Html.Hidden("ID", Model.ID)
        <div class="form-row">
            <div class="form-group col-md-3 cd-6">
                <label for="CategoryID">Категория:</label>
                @Html.DropDownList("CategoryID", new SelectList(ViewBag.Categorys, "ID", "Name"), "--Выбрать--", new { @class = "form-control" })
            </div>
            <div class="form-group col-md-9  cd-6">
                <label for="SubjcetID">Тема:</label>
                <input type="text" name="Subject" id="SubjcetID" class="form-control" placeholder="Введите тему статьи" value="@isContent(ViewBag.Subject, Model.Subject)" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group mx-2">
                <label for="TextID">Текст статьи:</label>
                <textarea name="Text" class="form-control" rows="6" cols="150" id="TextID" placeholder="Введите или скопируйте сюда текст статьи">@Model.Text</textarea>
            </div>
        </div>
        //Пока нет регистрации и авторизации все делается от Ковалчьука Антона с ID=1
        @Html.Hidden("AuthorID", Model.AuthorID)
        @Html.Hidden("DT", DateTime.Now)
        <input type="submit" class="btn btn-primary mx-2" value="Сохранить" />
    }
</div>
